{
  "files": [],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/mcp" }
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@cpu-search/core": ["packages/core/src/index.ts"],
      "@cpu-search/core/*": ["packages/core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "cases",
    "cases/**/*"
  ]
}