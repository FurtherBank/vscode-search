{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "composite": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/test/**/*",
    "**/*.test.ts",
    "cases",
    "cases/**/*"
  ]
}